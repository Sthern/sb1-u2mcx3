---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="pt-32 pb-20 bg-gradient-to-r from-blue-50 to-blue-100">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 max-w-3xl">
      {title}
    </h1>
    <p class="text-xl text-gray-700 max-w-2xl">
      {subtitle}
    </p>
  </div>
</section>