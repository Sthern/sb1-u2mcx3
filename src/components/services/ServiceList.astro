import ServiceCard from '../ServiceCard.astro';

const services = [
  {
    title: "Diagnostics",
    description: "Quantifiez votre trajectoire carbone et comprenez votre potentiel de réduction.",
    href: "/services/diagnostics"
  },
  {
    title: "Planification",
    description: "Définissez votre ambition et construisez le plan d'exécution.",
    href: "/services/planning"
  },
