---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { title, subtitle, centered = false } = Astro.props;
---

<div class={`mb-12 ${centered ? 'text-center' : ''}`}>
  <h2 class="text-3xl font-bold text-gray-900 mb-4">{title}</h2>
  {subtitle && <p class="text-xl text-gray-600">{subtitle}</p>}
</div>